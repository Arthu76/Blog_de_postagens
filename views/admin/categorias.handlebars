<h2>Lista de categorias:</h2>
<hr />
<a href='/admin/categorias/add'><button class='btn btn-success'>Nova categoria</button></a>

{{#each categorias}}
  <div class='card mt-4'>
    <div class='card-body'>
      <h4>{{nome}}</h4>
      <small><strong>Slug: </strong> {{slug}}</small>
      <br />
      <small>
        <strong>Data: </strong>{{date}}</small>
      <br />
      <div class='mt-4'>

        <a href='/admin/categorias/edit/{{_id}}' class='position-absolute'>
          <button class='btn btn-success'>Editar categoria</button>
        </a>
        <form
          action='/admin/categorias/deletar'
          method='POST'
          class='d-flex justify-content-end'
        >
          <input type='hidden' name='id' value='{{_id}}' />
          <button type='submit' class='btn btn-danger'>Deletar</button>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <h4 class='mt-3'>Nenhuma categoria registrada</h4>
{{/each}}